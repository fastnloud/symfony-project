{% extends 'base.html.twig' %}

{% block title %}{{ meta_title }}{% endblock %}

{% block body %}
    <div class="container-wrapper">

        <header class="main-header">

            <div class="top-bar container-fluid text-center">
                <kbd>{{ cmd }}</kbd>
            </div>

            <div class="intro">

                <div class="container text-center">

                    <a href="{{ url('homepage') }}">
                        <img class="profile-image img-circle" src="/img/profile-image.jpg" alt="{{ name|e('html_attr') }}">
                    </a>

                    <h1 class="name">{{ name }}</h1>

                    <div class="title">{{ title }}</div>

                    <div class="content">
                        {{ content|raw }}
                    </div>

                </div>

            </div>

            <div class="contact-info">

                <div class="container text-center">

                    <ul class="social list-inline">

                        {% for social_media in social_media_list %}
                            <li>
                                <a target="_blank" href="{{ social_media.href }}" title="{{ social_media.label|e('html_attr') }}">
                                    <i class="fa fa-{{ social_media.icon|e('html_attr') }}" aria-hidden="true"></i>
                                </a>
                            </li>
                        {% endfor %}

                    </ul>

                </div>

            </div>

            <div class="nav">

                <div class="container text-center">

                    <ul class="items list-inline">
                        <li class="item"><a href="{{ url('homepage') }}#{{ nav_item_id_1|e('html_attr') }}">{{ nav_item_title_1 }}</a></li>
                        <li class="item"><a href="{{ url('homepage') }}#{{ nav_item_id_2|e('html_attr') }}">{{ nav_item_title_2 }}</a></li>
                        <li class="item"><a href="{{ url('homepage') }}#{{ nav_item_id_3|e('html_attr') }}">{{ nav_item_title_3 }}</a></li>
                        <li class="item"><a href="{{ url('homepage') }}#{{ nav_item_id_4|e('html_attr') }}">{{ nav_item_title_4 }}</a></li>
                    </ul>

                </div>
            </div>

        </header>

        <div class="body">

            <div class="container">

                <div class="section-wrapper" id="{{ nav_item_id_1|e('html_attr') }}">

                    <h2 class="text-center section-header">{{ nav_item_title_1 }}</h2>

                    <div class="section clearfix">

                        <div class="timeline">

                            <ul class="items">

                                {% for work_experience in work_experience_list %}
                                    <li class="item">

                                        <div class="header clearfix">
                                            <div class="title">{{ work_experience.company }}</div>
                                            <div class="location">
                                                <i class="fa fa-map-marker" aria-hidden="true"></i> {{ work_experience.location }}
                                            </div>
                                        </div>

                                        <div class="meta">
                                            <div class="title">{{ work_experience.title }}</div>
                                            <div class="time">{{ work_experience.time }}</div>
                                        </div>

                                        <div class="content">
                                            {{ work_experience.description|raw }}
                                        </div>

                                    </li>
                                {% endfor %}

                            </ul>

                        </div>

                    </div>

                </div>

                <div class="section-wrapper" id="{{ nav_item_id_2|e('html_attr') }}">

                    <h2 class="text-center section-header">{{ nav_item_title_2 }}</h2>

                    <div class="clearfix">

                        <div class="grid">

                            {% for education in education_list %}
                                {% if loop.index is odd %}
                                    <div class="row">
                                {% endif %}

                                <div class="col col-sm-6">
                                    <div class="col-inner section clearfix">
                                        <div class="title">{{ education.title }}</div>
                                        <div class="content">{{ education.description|raw }}</div>
                                    </div>
                                </div>

                                {% if loop.index is even  or loop.last %}
                                    </div>
                                {% endif %}
                            {% endfor %}

                        </div>

                    </div>

                </div>

                <div class="section-wrapper" id="{{ nav_item_id_3|e('html_attr') }}">
                    <h2 class="text-center section-header">{{ nav_item_title_3 }}</h2>

                    <div class="section clearfix">

                        <div class="skills text-center">
                            {% for skill in skill_list %}
                                <span class="label label-default">{{ skill.label }}</span>
                            {% endfor %}
                        </div>

                    </div>

                </div>

                <div class="section-wrapper" id="{{ nav_item_id_4|e('html_attr') }}">

                    <h2 class="text-center section-header">{{ nav_item_title_4 }}</h2>

                    <div class="section clearfix">

                        <div class="contact row">

                            <div class="col-md-4 text-center">
                                <img class="profile-image img-circle" src="/img/profile-image.jpg" alt="{{ name|e('html_attr') }}">
                            </div>

                            <div class="col-md-8">

                                <div class="form-wrapper" id="form">

                                    {% if (app.request.get('success') and form.vars.valid) %}

                                        <div class="alert alert-success">{{ form_success_message|raw }}</div>

                                    {% endif %}

                                    {{ form_start(form, {'action': '#form', 'attr': {'novalidate': 'novalidate'}}) }}

                                    <div class="row">

                                        <div class="col-md-8">

                                            <div class="input-group input-group-lg{% if form_errors(form.email) %} has-error{% endif %}">
                                                <span class="input-group-addon">@</span>
                                                {{ form_widget(form.email, {'attr': {'placeholder': 'youremail@example.com'}}) }}
                                            </div>

                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-12{% if form_errors(form.content) %} has-error{% endif %}">

                                            {{ form_widget(form.content, {'attr': {'placeholder': 'Write something...'}}) }}

                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-12">

                                            <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key|e('html_attr') }}"></div>

                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-12">

                                            {{ form_widget(form.submit) }}

                                        </div>

                                    </div>

                                    {{ form_end(form) }}

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <footer class="footer text-center">
                {{ footer_text|raw }}
            </footer>

        </div>

    </div>
{% endblock %}
