{% extends 'base.html.twig' %}

{% block title %}{{ Placeholder.meta_title.value }}{% endblock %}

{% block body %}
    <div class="container-wrapper">

        <header class="main-header">

            <div class="top-bar container-fluid text-center">
                <kbd>{{ Placeholder.title.value }}</kbd>
            </div>

            <div class="intro">

                <div class="container text-center">

                    <a href="{{ url('homepage') }}">
                        <img class="profile-image" src="{{ Author.0.image }}" alt="{{ Author.0.name|e('html_attr') }}">
                    </a>

                    <h1 class="name">{{ Author.0.name }}</h1>

                    <div class="title">{{ Author.0.title }}</div>

                    <div class="content">
                        {{ Author.0.bio|raw }}
                    </div>

                </div>

            </div>

            <ul class="nav list-inline justify-content-center">
                {% for link in Link %}
                    <li>
                        <a target="_blank" href="{{ link.href }}" title="{{ link.label|e('html_attr') }}">
                            <i class="{{ link.icon|e('html_attr') }}"></i>
                        </a>
                    </li>
                {% endfor %}
            </ul>

            <ul class="nav justify-content-center">
                <li class="nav-item"><a href="{{ url('homepage') }}#{{ Placeholder.block_item_1.value|e('html_attr') }}">{{ Placeholder.block_item_1.value }}</a></li>
                <li class="nav-item"><a href="{{ url('homepage') }}#{{ Placeholder.block_item_2.value|e('html_attr') }}">{{ Placeholder.block_item_2.value }}</a></li>
                <li class="nav-item"><a href="{{ url('homepage') }}#{{ Placeholder.block_item_3.value|e('html_attr') }}">{{ Placeholder.block_item_3.value }}</a></li>
                <li class="nav-item"><a href="{{ url('homepage') }}#{{ Placeholder.block_item_4.value|e('html_attr') }}">{{ Placeholder.block_item_4.value }}</a></li>
            </ul>

        </header>

        <div class="body">

            <div class="container">

                <div class="section-wrapper" id="{{ Placeholder.block_item_1.value|e('html_attr') }}">

                    <h2 class="text-center section-header">{{ Placeholder.block_item_1.value }}</h2>

                    <div class="section clearfix">

                        <div class="timeline">

                            <ul class="items">

                                {% for timeline in Timeline %}
                                    <li class="item">

                                        <div class="header clearfix">
                                            <div class="title">{{ timeline.subtitle }}</div>
                                            <div class="location">
                                                <i class="fas fa-map-marker-alt"></i> {{ timeline.location }}
                                            </div>
                                        </div>

                                        <div class="meta">
                                            <div class="title">{{ timeline.title }}</div>
                                            <div class="time">
                                                {{ timeline.startDate|date("Y") }}
                                                {% if timeline.endDate is not empty %}
                                                    {% if timeline.endDate != timeline.startDate %}
                                                        - {{ timeline.endDate|date("Y") }}
                                                    {% endif %}
                                                {% else %}
                                                    - present
                                                {% endif %}
                                            </div>
                                        </div>

                                        <div class="content">
                                            {{ timeline.description|raw }}
                                        </div>

                                    </li>
                                {% endfor %}

                            </ul>

                        </div>

                    </div>

                </div>

                <div class="section-wrapper" id="{{ Placeholder.block_item_2.value|e('html_attr') }}">

                    <h2 class="text-center section-header">{{ Placeholder.block_item_2.value }}</h2>

                    <div class="clearfix">

                        <div class="grid" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": ".grid-sizer", "horizontalOrder": true}'>
                            <div class="grid-sizer"></div>
                            <div class="gutter-sizer"></div>

                            {% for milestone in Milestone %}
                                <div class="grid-item">
                                    <div class="section clearfix">
                                        <div class="title">{{ milestone.title }}</div>
                                        <div class="content">{{ milestone.description|raw }}</div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>

                    </div>

                </div>

                <div class="section-wrapper" id="{{ Placeholder.block_item_3.value|e('html_attr') }}">
                    <h2 class="text-center section-header">{{ Placeholder.block_item_3.value }}</h2>

                    <div class="section clearfix">

                        <div class="badges text-center">
                            {% for tag in Tag %}
                                <span class="badge">{{ tag.label }}</span>
                            {% endfor %}
                        </div>

                    </div>

                </div>

                <div class="section-wrapper" id="{{ Placeholder.block_item_4.value|e('html_attr') }}">

                    <h2 class="text-center section-header">{{ Placeholder.block_item_4.value }}</h2>

                    <div class="section clearfix">

                        <div class="contact row">

                            <div class="col-md-4 text-center">
                                <img class="profile-image img-circle" src="{{ Author.0.image }}" alt="{{ Author.0.name|e('html_attr') }}">
                            </div>

                            <div class="col-md-8">

                                <div class="form-wrapper" id="form">

                                    {% if (app.request.get('success') and form.vars.valid) %}

                                        <div class="alert alert-success">{{ Placeholder.form_success_message.value|raw }}</div>

                                    {% endif %}

                                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                                    <div class="row">

                                        <div class="col-md-8">

                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">@</span>
                                                </div>

                                                {% set class = form.email.vars.attr.class %}
                                                {% if form_errors(form.email) %}
                                                    {% set class = class ~ ' is-invalid' %}
                                                {% endif %}

                                                {{ form_widget(form.email, {'attr': {'placeholder': 'youremail@example.com', 'class': class}}) }}
                                            </div>

                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-12">

                                            {% set class = form.content.vars.attr.class %}
                                            {% if form_errors(form.content) %}
                                                {% set class = class ~ ' is-invalid' %}
                                            {% endif %}

                                            {{ form_widget(form.content, {'attr': {'placeholder': 'Write something...', 'class': class}}) }}

                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-12">

                                            <div class="subject">
                                                {{ form_widget(form.subject) }}
                                            </div>

                                            {{ form_widget(form.submit) }}

                                        </div>

                                    </div>

                                    {{ form_end(form) }}

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <footer class="footer text-center">
                {{ Placeholder.footer_text.value|raw }}
            </footer>

        </div>

    </div>
{% endblock %}
