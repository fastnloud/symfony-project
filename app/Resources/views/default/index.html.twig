{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-wrapper">

        <header class="main-header">

            <div class="top-bar container-fluid">

            </div>

            <div class="intro">

                <div class="container text-center">

                    <img class="profile-image img-circle" src="/img/profile-image.jpg" alt="{{ name }}">

                    <h1 class="name">{{ name }}</h1>

                    <div class="title">{{ title }}</div>

                    <div class="content">
                        {{ content|raw }}
                    </div>

                </div>

            </div>

            <div class="contact-info">

                <div class="container text-center">

                    <ul class="social list-inline">
                        <li>
                            <a target="_blank" href="{{ github_href }}">
                                <i class="fa fa-github" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li>
                            <a target="_blank" href="{{ linkedin_href }}">
                                <i class="fa fa-linkedin" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>

                </div>

            </div>

            <div class="nav">

                <div class="container text-center">

                    <ul class="items list-inline">
                        <li class="item"><a href="#{{ nav_item_id_1 }}">{{ nav_item_title_1 }}</a></li>
                        <li class="item"><a href="#{{ nav_item_id_2 }}">{{ nav_item_title_2 }}</a></li>
                        <li class="item"><a href="#{{ nav_item_id_3 }}">{{ nav_item_title_3 }}</a></li>
                        <li class="item"><a href="#{{ nav_item_id_4 }}">{{ nav_item_title_4 }}</a></li>
                    </ul>

                </div>
            </div>

        </header>

        <div class="body">

            <div class="container">

                <div class="section-wrapper" id="{{ nav_item_id_1 }}">

                    <h2 class="text-center section-header">{{ nav_item_title_1 }}</h2>

                    <section class="section clearfix">

                        <div class="timeline">

                            <ul class="items">

                                {% for work_experience in work_experience_list %}
                                    <li class="item">

                                        <div class="header clearfix">
                                            <div class="title">{{ work_experience.company }}</div>
                                            <div class="location">
                                                <i class="fa fa-map-marker" aria-hidden="true"></i> {{ work_experience.location }}
                                            </div>
                                        </div>

                                        <div class="meta">
                                            <div class="title">{{ work_experience.title }}</div>
                                            <div class="time">{{ work_experience.time }}</div>
                                        </div>

                                        <div class="content">
                                            {{ work_experience.description|raw }}
                                        </div>

                                    </li>
                                {% endfor %}

                            </ul>

                        </div>

                    </section>

                </div>

                <div class="section-wrapper" id="{{ nav_item_id_2 }}">

                    <h2 class="text-center section-header">{{ nav_item_title_2 }}</h2>

                    <section class="section clearfix">

                        <div class="grid row">
                            {% for education in education_list %}
                                <div class="col-md-6">
                                    <div class="col-inner">
                                        <div class="title">{{ education.title }}</div>
                                        <div class="content">{{ education.description|raw }}</div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                    </section>

                </div>

                <div class="section-wrapper" id="{{ nav_item_id_3 }}">
                    <h2 class="text-center section-header">{{ nav_item_title_3 }}</h2>

                    <section class="section clearfix">

                        <div class="skills text-center">
                            {% for skill in skill_list %}
                                <span class="label label-default">{{ skill.label }}</span>
                            {% endfor %}
                        </div>

                    </section>
                </div>

                <div class="section-wrapper" id="{{ nav_item_id_4 }}">

                    <h2 class="text-center section-header">{{ nav_item_title_4 }}</h2>

                    <section class="section clearfix">

                        <div class="contact row">

                            <div class="col-md-4 text-center">
                                <img class="profile-image img-circle" src="/img/profile-image.jpg" alt="{{ name }}">
                            </div>

                            <div class="col-md-8">

                                {{ form_start(form, {'action': '#form', 'attr': {'id': 'form', 'novalidate': 'novalidate'}}) }}

                                <div class="row">

                                    <div class="col-md-8">

                                        <div class="input-group input-group-lg{% if form_errors(form.email) %} has-error{% endif %}">
                                            <span class="input-group-addon">@</span>
                                            {{ form_widget(form.email, {'attr': {'placeholder': 'youremail@example.com'}}) }}
                                        </div>

                                    </div>

                                </div>

                                <div class="row">

                                    <div class="col-md-12{% if form_errors(form.message) %} has-error{% endif %}">

                                        {{ form_widget(form.message, {'attr': {'placeholder': 'Write something...'}}) }}

                                    </div>

                                </div>

                                <div class="row">

                                    <div class="col-md-12">
                                        {{ form_widget(form.submit) }}
                                    </div>

                                </div>

                                {{ form_end(form) }}

                            </div>

                        </div>

                    </section>

                </div>

            </div>

            <footer class="footer"></footer>

        </div>

    </div>
{% endblock %}
